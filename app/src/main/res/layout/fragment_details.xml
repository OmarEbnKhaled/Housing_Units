                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    app:icon="@drawable/ic_star"
                    app:iconTint="@color/yellow"
                    android:text="@string/rating"
                    android:textStyle="bold"
                    android:layout_weight="1"/>

            </LinearLayout>


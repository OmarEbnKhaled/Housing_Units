<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/primaryColor"
    android:paddingBottom="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_90sdp"
        android:src="@drawable/image_profile"
        android:scaleType="centerCrop"
        android:layout_margin="@dimen/_15sdp"
        app:riv_oval="true" />

    <LinearLayout
        android:id="@+id/header_lin_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/header_textName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:ellipsize="end"
            android:text="Omar Khaled"
            android:textColor="@color/secondaryTextColor"
            android:maxLines="1"
            android:gravity="start"
            android:textStyle="bold"
            android:textSize="@dimen/_18ssp"/>

        <TextView
            android:id="@+id/header_textEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:text="omarabdelaal2013@gmail.com"
            android:textColor="@color/secondaryTextColor"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="start"
            android:textSize="@dimen/_10ssp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/header_lin_new_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="visible"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/header_btn_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:backgroundTint="@color/green"
            android:text="@string/sign_up"
            android:textColor="@color/white"
            android:maxLines="1"
            android:gravity="center"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="@dimen/_16ssp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/white"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/header_btn_Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="@string/log_in"
            android:textColor="@color/secondaryTextColor"
            android:maxLines="1"
            android:gravity="center"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="@dimen/_12ssp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/white"/>

    </LinearLayout>

</LinearLayout>